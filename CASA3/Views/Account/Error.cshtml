@{
    ViewData["Title"] = "Error";
    var statusCode = ViewData["StatusCode"] as int?;
}

<section class="max-w-2xl mx-auto px-6 py-20 text-center">
    <h1 class="text-4xl font-bold text-gray-800 mb-2">Error</h1>
    @if (statusCode.HasValue)
    {
        <p class="text-xl text-gray-600 mb-4">Status code: @statusCode</p>
    }
    <p class="text-gray-600 mb-8">An error occurred while processing your request.</p>
    <a asp-controller="Home" asp-action="Index" class="inline-block bg-[#1E403F] text-white px-6 py-3 rounded-lg hover:bg-[#163332] transition-colors">Back to home</a>
</section>
