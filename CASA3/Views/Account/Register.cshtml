@model Core.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Admin Sign Up";
    var returnUrl = ViewData["ReturnUrl"] as string ?? "/Home/Admin";
}

<section class="relative min-h-[85vh] flex items-center justify-center py-16">
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/images/banners/banner-1.jpg');"></div>
    <div class="absolute inset-0 bg-black/50"></div>

    <div class="relative z-10 w-full max-w-md mx-4">
        <div class="bg-white rounded-2xl shadow-2xl p-8 md:p-10 border border-gray-100">
            <div class="text-center mb-8">
                <h1 class="text-2xl md:text-3xl font-bold text-gray-800 tracking-tight">Admin Sign Up</h1>
                <p class="text-gray-500 mt-2">Create an account to access the admin area</p>
            </div>

            <form asp-controller="Account" asp-action="Register" method="post" class="space-y-5">
                <input type="hidden" name="ReturnUrl" value="@returnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm" role="alert"></div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1">First name</label>
                        <input asp-for="FirstName"
                               type="text"
                               autocomplete="given-name"
                               class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]"
                               placeholder="First name" />
                        <span asp-validation-for="FirstName" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1">Last name</label>
                        <input asp-for="LastName"
                               type="text"
                               autocomplete="family-name"
                               class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]"
                               placeholder="Last name" />
                        <span asp-validation-for="LastName" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <input asp-for="Email"
                           type="email"
                           autocomplete="email"
                           class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]"
                           placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                    <input asp-for="Password"
                           type="password"
                           autocomplete="new-password"
                           class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]"
                           placeholder="At least 3 characters" />
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm password</label>
                    <input asp-for="ConfirmPassword"
                           type="password"
                           autocomplete="new-password"
                           class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 text-gray-800 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]"
                           placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
                </div>

                <button type="submit"
                        class="w-full bg-[#1E403F] text-white py-3 px-4 rounded-lg font-semibold hover:bg-[#163332] focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:ring-offset-2 transition-colors">
                    Sign Up
                </button>
            </form>

            <p class="mt-6 text-center text-sm text-gray-500">
                Already have an account?
                <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@returnUrl" class="text-[#b39359] font-medium hover:underline">Sign in</a>
            </p>
            <p class="mt-2 text-center text-sm text-gray-500">
                <a asp-controller="Home" asp-action="Index" class="text-[#b39359] hover:underline">Back to home</a>
            </p>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
