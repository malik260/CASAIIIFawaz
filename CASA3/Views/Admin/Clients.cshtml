@model List<Core.ViewModels.ClientVM>
@{
    ViewData["Title"] = "Client Management";
    var message = TempData["ClientMessage"] as string;
    var error = TempData["ClientError"] as string;
}

<section class="p-8">
    <div class="flex flex-wrap items-center justify-between gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Clients</h1>
            <p class="text-gray-600 mt-1">Manage registered clients</p>
        </div>
        <a asp-controller="Admin" asp-action="AddClient"
           class="inline-flex items-center gap-2 bg-[#1E403F] text-white px-5 py-2.5 rounded-lg hover:bg-[#163332] transition-colors font-medium">
            <i class="fa fa-plus"></i> Add Client
        </a>
    </div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="mb-6 p-4 rounded-lg bg-green-50 text-green-800 border border-green-200">@message</div>
    }
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="mb-6 p-4 rounded-lg bg-red-50 text-red-800 border border-red-200">@error</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="bg-gray-50 border border-gray-200 rounded-xl p-12 text-center text-gray-600">
            <i class="fa fa-users text-4xl text-gray-300 mb-4 block"></i>
            <p class="text-lg font-medium mb-2">No clients registered yet</p>
            <p class="text-sm mb-6">Clients who complete the online registration form will appear here, or you can add one manually.</p>
            <a asp-controller="Admin" asp-action="AddClient"
               class="inline-flex items-center gap-2 bg-[#1E403F] text-white px-6 py-3 rounded-lg hover:bg-[#163332] transition-colors">
                <i class="fa fa-plus"></i> Add your first client
            </a>
        </div>
    }
    else
    {
        <!-- Stats row -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
            @{
                var total = Model.Count;
                var approved = Model.Count(c => c.Status == Core.Enum.RegistrationStatus.Approved);
                var pending = Model.Count(c => c.Status == Core.Enum.RegistrationStatus.Initiated);
                var rejected = Model.Count(c => c.Status == Core.Enum.RegistrationStatus.Rejected);
            }
            <div class="bg-white rounded-xl border border-gray-100 p-4 text-center shadow-sm">
                <p class="text-2xl font-bold text-gray-800">@total</p>
                <p class="text-xs text-gray-500 mt-1 uppercase tracking-wide">Total</p>
            </div>
            <div class="bg-white rounded-xl border border-gray-100 p-4 text-center shadow-sm">
                <p class="text-2xl font-bold text-green-600">@approved</p>
                <p class="text-xs text-gray-500 mt-1 uppercase tracking-wide">Approved</p>
            </div>
            <div class="bg-white rounded-xl border border-gray-100 p-4 text-center shadow-sm">
                <p class="text-2xl font-bold text-yellow-600">@pending</p>
                <p class="text-xs text-gray-500 mt-1 uppercase tracking-wide">Pending</p>
            </div>
            <div class="bg-white rounded-xl border border-gray-100 p-4 text-center shadow-sm">
                <p class="text-2xl font-bold text-red-500">@rejected</p>
                <p class="text-xs text-gray-500 mt-1 uppercase tracking-wide">Rejected</p>
            </div>
        </div>

        <div class="overflow-x-auto border border-gray-200 rounded-xl bg-white shadow-sm">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Client</th>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Type</th>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Contact</th>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Location</th>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Registered</th>
                        <th class="px-5 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var client in Model)
                    {
                        var statusClass = client.Status == Core.Enum.RegistrationStatus.Approved
                            ? "bg-green-100 text-green-800"
                            : client.Status == Core.Enum.RegistrationStatus.Rejected
                                ? "bg-red-100 text-red-800"
                                : "bg-yellow-100 text-yellow-800";

                        var typeClass = client.ClientType == Core.Enum.ClientType.Corporate
                            ? "bg-blue-100 text-blue-800"
                            : client.ClientType == Core.Enum.ClientType.Joint
                                ? "bg-purple-100 text-purple-800"
                                : "bg-gray-100 text-gray-700";

                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-5 py-4">
                                <p class="font-semibold text-gray-800 text-sm">@client.FullName</p>
                                <p class="text-gray-400 text-xs mt-0.5">@client.Email</p>
                            </td>
                            <td class="px-5 py-4">
                                <span class="px-2.5 py-1 rounded-full text-xs font-medium @typeClass">@client.ClientType</span>
                            </td>
                            <td class="px-5 py-4 text-gray-600 text-sm">@client.PhoneNumber</td>
                            <td class="px-5 py-4 text-gray-600 text-sm">@client.City, @client.State</td>
                            <td class="px-5 py-4">
                                <span class="px-2.5 py-1 rounded-full text-xs font-medium @statusClass">@client.Status</span>
                            </td>
                            <td class="px-5 py-4 text-gray-500 text-sm">@client.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td class="px-5 py-4 text-right whitespace-nowrap">
                                <a asp-controller="Admin" asp-action="ClientDetails" asp-route-id="@client.Id"
                                   class="text-[#1E403F] hover:underline text-sm mr-3">View</a>
                                <a asp-controller="Admin" asp-action="EditClient" asp-route-id="@client.Id"
                                   class="text-[#b39359] hover:underline text-sm mr-3">Edit</a>
                                <form asp-controller="Admin" asp-action="DeleteClient" method="post" class="inline"
                                      onsubmit="return confirm('Are you sure you want to remove this client?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@client.Id" />
                                    <button type="submit" class="text-red-500 hover:underline text-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
