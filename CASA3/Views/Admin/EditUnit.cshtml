@model Core.DTOs.BuildingDesignCreateDto
@{
    ViewData["Title"] = "Edit Unit";
    var projectId = ViewData["ProjectId"] as string;
    var unitId = ViewData["UnitId"] as string;
}

<section class="p-8 max-w-2xl">
    <div class="mb-8">
        <a asp-controller="Admin" asp-action="ProjectUnits" asp-route-projectId="@projectId" class="text-[#1E403F] hover:underline">&larr; Back to Units</a>
    </div>
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Unit</h1>

    <form asp-controller="Admin" asp-action="EditUnit" asp-route-projectId="@projectId" asp-route-id="@unitId" method="post" enctype="multipart/form-data" class="space-y-5">
        <div asp-validation-summary="All" class="text-red-600 text-sm"></div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Unit name <span class="text-red-500">*</span></label>
            <input asp-for="Name" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="e.g. PERIDOT" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Description (optional)</label>
            <textarea asp-for="Description" rows="4" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Unit description..."></textarea>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Location (optional)</label>
            <input asp-for="Location" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="e.g. Block A" />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Unit image</label>
            <input asp-for="ImageUrl" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Or paste URL (optional)" />
            <p class="text-gray-500 text-xs mt-1">Or upload to replace: JPG, PNG, GIF, WebP (max 15MB)</p>
            <input type="file" name="imageFile" accept=".jpg,.jpeg,.png,.gif,.webp" class="mt-2 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-[#1E403F] file:text-white file:font-medium hover:file:bg-[#163332]" />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Brochure PDF</label>
            <input asp-for="BrochurePdfUrl" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Or paste URL (optional)" />
            <p class="text-gray-500 text-xs mt-1">Or upload to replace: PDF (max 15MB)</p>
            <input type="file" name="brochurePdfFile" accept=".pdf" class="mt-2 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-[#1E403F] file:text-white file:font-medium hover:file:bg-[#163332]" />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Floor plan PDF</label>
            <input asp-for="FloorPlanPdfUrl" type="text" class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#b39359] focus:border-[#b39359]" placeholder="Or paste URL (optional)" />
            <p class="text-gray-500 text-xs mt-1">Or upload to replace: PDF (max 15MB)</p>
            <input type="file" name="floorPlanPdfFile" accept=".pdf" class="mt-2 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-[#1E403F] file:text-white file:font-medium hover:file:bg-[#163332]" />
        </div>

        <div class="flex gap-3 pt-2">
            <button type="submit" class="bg-[#1E403F] text-white px-6 py-3 rounded-lg font-semibold hover:bg-[#163332] transition-colors">Save changes</button>
            <a asp-controller="Admin" asp-action="ProjectUnits" asp-route-projectId="@projectId" class="bg-gray-200 text-gray-800 px-6 py-3 rounded-lg hover:bg-gray-300 transition-colors">Cancel</a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
