@model List<Core.DTOs.TeamMemberDto>
@{
    ViewData["Title"] = "Staff Setup";
    var message = TempData["StaffMessage"] as string;
}

<section class="p-8">
    <div class="flex flex-wrap items-center justify-between gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Staff</h1>
            <p class="text-gray-600 mt-1">Manage team members (Board of Directors & Management)</p>
        </div>
        <a asp-controller="Admin" asp-action="AddStaff" class="inline-block bg-[#1E403F] text-white px-5 py-2.5 rounded-lg hover:bg-[#163332] transition-colors">Add Staff</a>
    </div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="mb-6 p-4 rounded-lg bg-green-50 text-green-800 border border-green-200">@message</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="bg-gray-50 border border-gray-200 rounded-xl p-12 text-center text-gray-600">
            <p class="mb-4">No staff added yet.</p>
            <a asp-controller="Admin" asp-action="AddStaff" class="inline-block bg-[#1E403F] text-white px-6 py-3 rounded-lg hover:bg-[#163332] transition-colors">Add your first staff</a>
        </div>
    }
    else
    {
        <div class="overflow-x-auto border border-gray-200 rounded-xl">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Photo</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var staff in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (!string.IsNullOrEmpty(staff.ImageUrl))
                                {
                                    <img src="@staff.ImageUrl" alt="@staff.Name" class="h-12 w-12 rounded-full object-cover" />
                                }
                                else
                                {
                                    <div class="h-12 w-12 rounded-full bg-gray-200 flex items-center justify-center text-gray-400 text-sm">—</div>
                                }
                            </td>
                            <td class="px-6 py-4 font-medium text-gray-900">@staff.Name</td>
                            <td class="px-6 py-4 text-gray-600">@staff.Position</td>
                            <td class="px-6 py-4 text-gray-600">@(staff.PhoneNumber ?? "—")</td>
                            <td class="px-6 py-4 text-gray-600">@(staff.Category == Core.Enum.TeamMemeberCategory.BOD ? "Board" : "Management")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                <a asp-controller="Admin" asp-action="EditStaff" asp-route-id="@staff.Id" class="text-[#1E403F] hover:underline mr-4">Edit</a>
                                <form asp-controller="Admin" asp-action="DeleteStaff" method="post" class="inline" onsubmit="return confirm('Remove this staff member?');">
                                    <input type="hidden" name="id" value="@staff.Id" />
                                    <button type="submit" class="text-red-600 hover:underline">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
