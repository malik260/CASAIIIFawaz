@using static Util
@using Core.Enum
@using Core.Model
@model IEnumerable<Core.ViewModels.CarouselVM>
@{
    Layout = Constants.CMS_Layout;
    var pageType = "Carousel";
    ViewData["Page-title"] = pageType;
    ViewData["Title"] = pageType;
    var user = Util.GetCurrentUser();
}

<style>
    body {
        counter-reset: Serial;
    }

    tr td:first-child:before {
        counter-increment: Serial;
        content: counter(Serial);
    }

    .carousel-thumb {
        max-width: 150px;
        max-height: 80px;
        object-fit: cover;
    }

    .status-badge {
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 11px;
    }

    .page-type-badge {
        padding: 4px 10px;
        border-radius: 8px;
        font-size: 11px;
        font-weight: 600;
    }

    .conditional-field {
        display: none;
    }
</style>

<!-- Page Header -->
<div class="page-header">
    <div class="row">
        <div class="col">
            <h3 class="page-title">Carousel Management</h3>
            <p class="text-muted">Manage home and vendor page carousels</p>
        </div>
        <div class="col-auto float-right ml-auto">
            <a class="btn add-btn" href="#" data-toggle="modal" data-target="#crl_addModal">
                <i class="fa fa-plus"></i> Add Carousel
            </a>
        </div>
    </div>
</div>
<!-- /Page Header -->

<div class="row">
    <div class="col-md-12">
        @if (Model != null && Model.Count() > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover custom-table datatable mb-0">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Background</th>
                            <th>Title</th>
                            <th>Page Type</th>
                            <th>Button Text</th>
                            <th>Badge/Link</th>
                            <th>Display Order</th>
                            <th>Status</th>
                            <th>Created By</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.BackgroundImageUrl))
                                    {
                                        <img src="/@item.BackgroundImageUrl" alt="@item.Title" class="carousel-thumb">
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Image</span>
                                    }
                                </td>
                                <td>
                                    <strong>@item.Title</strong>
                                    @if (!string.IsNullOrEmpty(item.Subtitle))
                                    {
                                        <br>
                            
                                        <small class="text-muted">@(item.Subtitle.Length > 40 ? item.Subtitle.Substring(0, 40) + "..." : item.Subtitle)</small>
                                    }
                                </td>
                                <td>
                                    @if (item.PageType == CarouselPageType.Home)
                                    {
                                        <span class="badge badge-primary page-type-badge">Home</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-info page-type-badge">Vendor</span>
                                    }
                                </td>
                                <td>@item.ButtonText</td>
                                <td>
                                    @if (item.PageType == CarouselPageType.Home)
                                    {
                                        @if (!string.IsNullOrEmpty(item.BadgeText))
                                        {
                                            <small><strong>Badge:</strong> @item.BadgeText</small>
                                            <br>
                                        }
                                        @if (!string.IsNullOrEmpty(item.BrochureUrl))
                                        {
                                            <a href="/@item.BrochureUrl" target="_blank" class="text-success">
                                                <i class="fa fa-file-pdf-o"></i> Brochure
                                            </a>
                                        }
                                    }
                                    else
                                    {
                                        @if (!string.IsNullOrEmpty(item.ButtonLink))
                                        {
                                            <a href="@item.ButtonLink" target="_blank" class="text-info">
                                                <i class="fa fa-external-link"></i> Link
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    }
                                </td>
                                <td>@item.DisplayOrder</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge badge-success status-badge">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger status-badge">Inactive</span>
                                    }
                                </td>
                                <td>@item.CreatedBy</td>
                                <td class="text-center">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <i class="material-icons">more_vert</i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" onclick="ToggleCarouselStatus('@item.Id')">
                                                <i class="fa fa-@(item.IsActive ? "ban" : "check") m-r-5"></i>@(item.IsActive ? "Deactivate" : "Activate")
                                            </a>
                                            <a class="dropdown-item" onclick="GetCarouselDetailForEdit('@item.Id')">
                                                <i class="fa fa-edit m-r-5 text-success"></i>Edit
                                            </a>
                                            <a class="dropdown-item" onclick="getDataForDelete('@item.Id')">
                                                <i class="fa fa-trash-o m-r-5 text-danger"></i>Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="row p-5 m-5">
                <div class="col-md-12 text-center p-5 m-5">
                    <h2>No Record Found</h2>
                </div>
            </div>
        }
    </div>
</div>

<!-- Add Modal -->
<div class="modal custom-modal fade" id="crl_addModal" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
            <div class="modal-body">
                <h5 class="modal-title text-center mb-3">Add Carousel Slide</h5>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Page Type <span class="text-danger">*</span></label>
                            <select class="form-control select" id="crl_page_type" required>
                                <option value="1">Home Page</option>
                                <option value="2">Vendor Page</option>
                            </select>
                            <small class="text-muted">Select which page this carousel will appear on</small>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Title <span class="text-danger">*</span></label>
                            <input type="text" id="crl_title" class="form-control" placeholder="Enter Carousel Title">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Subtitle <small class="text-muted">(Optional)</small></label>
                            <input type="text" id="crl_subtitle" class="form-control" placeholder="Enter Subtitle">
                        </div>
                    </div>

                    <!-- Home Page Specific Fields -->
                    <div class="col-md-12 conditional-field" id="crl_home_fields">
                        <div class="form-group">
                            <label>Badge Text <small class="text-muted">(e.g., "PROJECT OF THE MONTH")</small></label>
                            <input type="text" id="crl_badge_text" class="form-control" placeholder="Enter Badge Text">
                        </div>
                        <div class="form-group">
                            <label>Brochure PDF <span class="text-danger">*</span></label>
                            <input type="file" id="crl_brochure" class="form-control" accept=".pdf">
                            <small class="text-muted">Max size: 10MB. PDF format only</small>
                        </div>
                    </div>

                    <!-- Vendor Page Specific Fields -->
                    <div class="col-md-12 conditional-field" id="crl_vendor_fields">
                        <div class="form-group">
                            <label>Button Link <small class="text-muted">(Optional)</small></label>
                            <input type="url" id="crl_button_link" class="form-control" placeholder="https://example.com">
                            <small class="text-muted">External link for the button</small>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Button Text <span class="text-danger">*</span></label>
                            <input type="text" id="crl_button_text" class="form-control" placeholder="e.g., DOWNLOAD BROCHURE">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Background Image <span class="text-danger">*</span></label>
                            <input type="file" id="crl_background_image" class="form-control" accept="image/*">
                            <small class="text-muted">Max size: 5MB. Recommended: 1920x800px</small>
                        </div>
                    </div>
                </div>
                <div class="m-t-20 text-center">
                    <button class="btn newBtn submit-btn" id="crl_add_carousel_btn" onclick="CreateCarousel()">Add Carousel</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal custom-modal fade" id="crl_editModal" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
            <div class="modal-body">
                <h5 class="modal-title text-center mb-3">Update Carousel Slide</h5>
                <div class="row">
                    <input type="text" id="crl_edit_Id" hidden>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Page Type <span class="text-danger">*</span></label>
                            <select class="form-control select" id="crl_page_type_edit" required>
                                <option value="1">Home Page</option>
                                <option value="2">Vendor Page</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Title <span class="text-danger">*</span></label>
                            <input type="text" id="crl_title_edit" class="form-control" placeholder="Enter Carousel Title">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Subtitle <small class="text-muted">(Optional)</small></label>
                            <input type="text" id="crl_subtitle_edit" class="form-control" placeholder="Enter Subtitle">
                        </div>
                    </div>

                    <!-- Home Page Specific Fields -->
                    <div class="col-md-12 conditional-field" id="crl_home_fields_edit">
                        <div class="form-group">
                            <label>Badge Text <small class="text-muted">(e.g., "PROJECT OF THE MONTH")</small></label>
                            <input type="text" id="crl_badge_text_edit" class="form-control" placeholder="Enter Badge Text">
                        </div>
                        <div class="form-group">
                            <label>Brochure PDF <small class="text-muted">(Leave empty to keep current)</small></label>
                            <div id="crl_current_brochure" class="mb-2"></div>
                            <input type="file" id="crl_brochure_edit" class="form-control" accept=".pdf">
                            <small class="text-muted">Max size: 10MB. PDF format only</small>
                        </div>
                    </div>

                    <!-- Vendor Page Specific Fields -->
                    <div class="col-md-12 conditional-field" id="crl_vendor_fields_edit">
                        <div class="form-group">
                            <label>Button Link <small class="text-muted">(Optional)</small></label>
                            <input type="url" id="crl_button_link_edit" class="form-control" placeholder="https://example.com">
                            <small class="text-muted">External link for the button</small>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Button Text <span class="text-danger">*</span></label>
                            <input type="text" id="crl_button_text_edit" class="form-control" placeholder="e.g., DOWNLOAD BROCHURE">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Display Order</label>
                            <input type="number" id="crl_display_order_edit" class="form-control" value="0" min="0">
                            <small class="text-muted">Lower numbers appear first</small>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Background Image <small class="text-muted">(Leave empty to keep current)</small></label>
                            <div id="crl_current_background" class="mb-2"></div>
                            <input type="file" id="crl_background_image_edit" class="form-control" accept="image/*">
                            <small class="text-muted">Max size: 5MB. Recommended: 1920x800px</small>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Status</label>
                            <div class="mt-2">
                                <label class="custom_check">
                                    <input type="checkbox" id="crl_is_active_edit" checked>
                                    <span class="checkmark"></span> Active
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="m-t-20 text-center">
                    <button class="btn newBtn submit-btn" id="crl_edit_carousel_btn" onclick="UpdateCarousel()">Update Record</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal custom-modal fade" id="crl_deleteModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-header">
                    <input id="crl_delete_Id" hidden />
                    <h3>Delete Carousel</h3>
                    <p>Are you sure you want to delete this carousel slide?</p>
                </div>
                <div class="modal-btn delete-action">
                    <div class="row">
                        <div class="col-6">
                            <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-secondary cancel-btn">Cancel</a>
                        </div>
                        <div class="col-6">
                            <a onclick="DeleteCarousel()" id="crl_del_carousel_btn" class="btn btn-primary continue-btn">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/carousel.js"></script>
}
