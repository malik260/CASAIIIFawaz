@{
    ViewData["Title"] = "Registration Successful";
    var message = TempData["ClientSuccess"] as string ?? "Your registration has been submitted successfully.";
}

<section class="min-h-[70vh] flex items-center justify-center py-20 bg-gray-50">
    <div class="max-w-lg mx-auto px-6 text-center">
        <div class="w-20 h-20 rounded-full bg-[#1E403F]/10 flex items-center justify-center mx-auto mb-6">
            <i class="fa fa-check-circle text-[#1E403F] text-4xl"></i>
        </div>
        <h1 class="text-3xl font-bold text-gray-800 mb-4">Registration Submitted!</h1>
        <p class="text-gray-600 text-lg mb-8">@message Our team will review your details and be in touch shortly.</p>
        <a asp-controller="Home" asp-action="Index"
           class="inline-block bg-[#1E403F] text-white px-8 py-3 rounded-xl font-semibold hover:bg-[#163332] transition-colors">
            Back to Home
        </a>
    </div>
</section>
