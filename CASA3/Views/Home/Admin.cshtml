@{
    ViewData["Title"] = "Admin";
}

<section class="max-w-4xl mx-auto px-6 py-16">
    <h1 class="text-4xl font-bold text-gray-800 mb-2">Admin</h1>
    <p class="text-gray-600 mb-8">You are signed in. Welcome to the admin area.</p>

    <div class="mb-8">
        <h2 class="text-lg font-semibold text-gray-700 mb-3">Setups</h2>
        <ul class="space-y-2">
            <li>
                <a asp-controller="Admin" asp-action="Staffs" class="inline-flex items-center gap-2 text-[#1E403F] hover:underline font-medium">
                    Staff &amp; Team members
                    <span class="text-gray-400">â€” Add staff name, role, image, address, phone, LinkedIn</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="flex flex-wrap gap-4">
        <a asp-controller="Home" asp-action="Index" class="inline-block bg-gray-200 text-gray-800 px-6 py-3 rounded-lg hover:bg-gray-300 transition-colors">Back to site</a>
        <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
            <button type="submit" class="inline-block bg-[#1E403F] text-white px-6 py-3 rounded-lg hover:bg-[#163332] transition-colors">Sign out</button>
        </form>
    </div>
</section>
