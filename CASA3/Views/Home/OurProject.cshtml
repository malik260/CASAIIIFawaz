@model IEnumerable<Core.DTOs.ProjectDto>

@{
    ViewData["Title"] = "Our Project";
}

<!-- Hero Section -->
<section class="relative h-[85vh] overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/images/banners/banner-1.jpg');"></div>

    <!-- Overlay (optional, for better text readability) -->
    <div class="absolute inset-0 bg-black/10"></div>

    <!-- Content -->
    <div class="relative z-10 h-full flex items-center">
        <div class="max-w-7xl mx-auto px-6 w-full">
            <div class="text-center mb-10">
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 tracking-wide">
                    MORE THAN A HOME
                </h1>
                <div class="w-24 h-px bg-gray-300 mx-auto"></div>
            </div>
        </div>
    </div>
</section>

<section class="pt-16 bg-white">
    <div class="max-w-7xl mx-auto px-6">
        <!-- Intro -->
        <p class="leading-relaxed mb-10 font-semi-bold text-[14px] text-[#7a7a7a]">
            We are a purpose-driven real estate company dedicated to creating sustainable living solutions that meet today's needs while thriving as long-term investments. Through our thoughtfully designed, integrated communities, we redefine modern living with a focus on comfort, innovation, and environmental responsibility. We combine cutting-edge technology and forward-thinking design to offer a refined lifestyle experience that enhances quality living.
        </p>

        <!-- Category Tabs -->
        <div class="flex mb-12">
            <button class="tab-btn active" data-category="Luxury">LUXURY</button>
            <button class="tab-btn" data-category="Premium">PREMIUM</button>
            <button class="tab-btn" data-category="MidPremium">MID-PREMIUM</button>
        </div>

        <!-- Projects Grid -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">

            @foreach (var project in Model)
            {
                var category = project.Category?.ToString();

                <div class="project-card" data-category="@category">

                    <!-- Image -->
                    <a asp-controller="Home" asp-action="ProjectDetails" asp-route-id="@project.Id">
                        <div class="aspect-[4/3] overflow-hidden mb-4">
                            <img src="@project.HeroImageUrl"
                                 alt="@project.Name"
                                 class="w-full h-full object-cover transition duration-500 hover:scale-105" />
                        </div>
                    </a>

                    <!-- Title -->
                    <h3 class="text-lg font-semibold text-[#333] uppercase mb-3 tracking-wide">
                        @project.Name
                    </h3>

                    <!-- Button -->
                    <a asp-controller="Home" asp-action="ProjectDetails" asp-route-id="@project.Id"
                       class="inline-block rounded-md px-6 py-2 bg-[#3a3a3a] text-white text-sm hover:bg-[#bc9633] transition">
                        Discover More
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<script>
    const buttons = document.querySelectorAll(".tab-btn");
    const cards = document.querySelectorAll(".project-card");

    buttons.forEach(btn => {
        btn.addEventListener("click", () => {

            // active style
            buttons.forEach(b => b.classList.remove("active"));
            btn.classList.add("active");

            const category = btn.getAttribute("data-category");

            cards.forEach(card => {
                card.style.display =
                    card.getAttribute("data-category") === category
                        ? "block"
                        : "none";
            });
        });
    });

    // trigger first tab on load
    document.querySelector(".tab-btn.active").click();
</script>
