@using Core.DTOs
@model ProjectDetailsDto

@{
    ViewData["Title"] = Model?.Name ?? "Project Details";
}

<!-- Hero Section -->
<section class="relative h-screen overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('@(string.IsNullOrEmpty(Model?.HeroImageUrl) ? "/images/projects/project-1.webp" : Model.HeroImageUrl)');"></div>

    <!-- Overlay (for better text readability) -->
    <div class="absolute inset-0 bg-black/30"></div>

    <!-- Content -->
    <div class="relative z-10 h-full flex items-center justify-center">
        <div class="text-center text-white px-6">
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-4">@Model?.Name</h1>
            <p class="text-lg md:text-xl lg:text-2xl max-w-3xl mx-auto">Welcome to luxury living</p>
        </div>
    </div>
</section>

<!-- Description Section -->
@if (!string.IsNullOrEmpty(Model?.Description))
{
<section class="py-16 md:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <p class="text-lg text-gray-700 leading-relaxed">
            @Model.Description
        </p>
    </div>
</section>
}

<!-- Building Designs Section -->
@if (Model?.BuildingDesigns != null && Model.BuildingDesigns.Any())
{
    <section class="py-16 md:py-24 bg-gray-50">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
            <!-- Building Designs -->
            @{
                int designIndex = 0;
            }
            @foreach (var design in Model.BuildingDesigns)
            {
                if (designIndex % 2 == 0)
                {
                    <!-- Image Left, Text Right -->
                    <div class="grid lg:grid-cols-2 gap-12 items-center mb-20">
                        <!-- Image -->
                        <div>
                            <img src="@(string.IsNullOrEmpty(design.ImageUrl) ? "/images/sample-project-details.webp" : design.ImageUrl)" alt="@design.Name" class="w-full h-auto shadow-lg" />
                        </div>

                        <!-- Text -->
                        <div>
                            <h3 class="text-3xl md:text-4xl font-bold mb-4" style="color: #4A4A4A;">
                                @design.Name
                            </h3>
                            @if (!string.IsNullOrEmpty(design.Location))
                            {
                                <p class="text-base text-gray-500 mb-3">@design.Location</p>
                            }
                            <p class="text-lg text-gray-700 mb-8 leading-relaxed">
                                @design.Description
                            </p>
                            <div class="flex flex-wrap gap-3">
                                @if (!string.IsNullOrEmpty(design.BrochurePdfUrl))
                                {
                                    <a href="@design.BrochurePdfUrl" target="_blank" class="inline-block px-6 py-3 border-2 border-[#b39359] text-[#b39359] font-bold hover:bg-[#b39359] hover:text-white transition-all duration-300">DOWNLOAD BROCHURE</a>
                                }
                                @if (!string.IsNullOrEmpty(design.FloorPlanPdfUrl))
                                {
                                    <a href="@design.FloorPlanPdfUrl" target="_blank" class="inline-block px-6 py-3 border-2 border-gray-800 text-gray-800 font-bold hover:bg-gray-800 hover:text-white transition-all duration-300">DOWNLOAD FLOOR PLAN</a>
                                }
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Text Left, Image Right -->
                    <div class="grid lg:grid-cols-2 gap-12 items-center mb-20">
                        <!-- Text -->
                        <div>
                            <h3 class="text-3xl md:text-4xl font-bold mb-4" style="color: #4A4A4A;">
                                @design.Name
                            </h3>
                            @if (!string.IsNullOrEmpty(design.Location))
                            {
                                <p class="text-base text-gray-500 mb-3">@design.Location</p>
                            }
                            <p class="text-lg text-gray-700 mb-8 leading-relaxed">
                                @design.Description
                            </p>
                            <div class="flex flex-wrap gap-3">
                                @if (!string.IsNullOrEmpty(design.BrochurePdfUrl))
                                {
                                    <a href="@design.BrochurePdfUrl" target="_blank" class="inline-block px-6 py-3 border-2 border-[#b39359] text-[#b39359] font-bold hover:bg-[#b39359] hover:text-white transition-all duration-300">DOWNLOAD BROCHURE</a>
                                }
                                @if (!string.IsNullOrEmpty(design.FloorPlanPdfUrl))
                                {
                                    <a href="@design.FloorPlanPdfUrl" target="_blank" class="inline-block px-6 py-3 border-2 border-gray-800 text-gray-800 font-bold hover:bg-gray-800 hover:text-white transition-all duration-300">DOWNLOAD FLOOR PLAN</a>
                                }
                            </div>
                        </div>

                        <!-- Image -->
                        <div>
                            <img src="@(string.IsNullOrEmpty(design.ImageUrl) ? "/images/sample-project-details.webp" : design.ImageUrl)" alt="@design.Name" class="w-full h-auto shadow-lg" />
                        </div>
                    </div>
                }

                designIndex++;
            }
        </div>
    </section>
}

<!-- Download Brochure Section (main project brochure) -->
@if (!string.IsNullOrEmpty(Model?.BrochurePdfUrl))
{
<section class="pt-16 md:py-24 bg-white">
    <div class="max-w-6xl mx-auto px-6 lg:px-8 text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-8" style="color: #4A4A4A;">
            Learn More About @Model?.Name
        </h2>
        <p class="text-lg text-gray-700 mb-8">
            Download our comprehensive brochure for detailed information about all the features, amenities, and specifications.
        </p>
        <a href="@Model.BrochurePdfUrl" target="_blank" class="inline-block px-8 py-4 bg-gray-800 text-white font-bold text-lg hover:bg-gray-900 transition-all duration-300">
            DOWNLOAD BROCHURE
        </a>
    </div>
</section>
}

<!-- Project Gallery -->
@if (Model?.GalleryImages != null && Model.GalleryImages.Any())
{
<section class="py-16 md:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold mb-10 text-center" style="color: #4A4A4A;">Gallery</h2>

        <!-- Masonry-style responsive grid -->
        <div class="columns-1 sm:columns-2 lg:columns-3 gap-4 space-y-4">
            @foreach (var img in Model.GalleryImages)
            {
                <div class="break-inside-avoid overflow-hidden group cursor-pointer"
                     onclick="openLightbox('@img.ImageUrl', '@(img.Caption ?? string.Empty)')">
                    <img src="@img.ImageUrl"
                         alt="@(img.Caption ?? Model.Name)"
                         class="w-full h-auto object-cover transition-transform duration-500 group-hover:scale-105" />
                    @if (!string.IsNullOrEmpty(img.Caption))
                    {
                        <p class="text-sm text-gray-500 mt-1 px-1">@img.Caption</p>
                    }
                </div>
            }
        </div>
    </div>
</section>

<!-- Lightbox -->
<div id="galleryLightbox"
     class="fixed inset-0 z-50 hidden bg-black/90 flex items-center justify-center p-4"
     onclick="closeLightbox()">
    <button class="absolute top-5 right-6 text-white text-4xl font-light leading-none hover:text-gray-300"
            onclick="closeLightbox()">&times;</button>
    <button id="lightboxPrev"
            class="absolute left-4 top-1/2 -translate-y-1/2 text-white text-5xl font-light leading-none hover:text-gray-300 px-3"
            onclick="event.stopPropagation(); shiftLightbox(-1)">&#8249;</button>
    <button id="lightboxNext"
            class="absolute right-4 top-1/2 -translate-y-1/2 text-white text-5xl font-light leading-none hover:text-gray-300 px-3"
            onclick="event.stopPropagation(); shiftLightbox(1)">&#8250;</button>
    <div class="max-w-5xl w-full text-center" onclick="event.stopPropagation()">
        <img id="lightboxImg" src="" alt="" class="max-h-[80vh] mx-auto object-contain" />
        <p id="lightboxCaption" class="text-gray-300 text-sm mt-3"></p>
    </div>
</div>

<script>
    const galleryImages = [
        @foreach (var img in Model.GalleryImages)
        {
            <text>{ url: '@img.ImageUrl', caption: '@(img.Caption?.Replace("'", "\\'") ?? string.Empty)' },</text>
        }
    ];
    let lightboxIndex = 0;

    function openLightbox(url, caption) {
        lightboxIndex = galleryImages.findIndex(i => i.url === url);
        showLightboxAt(lightboxIndex);
        document.getElementById('galleryLightbox').classList.remove('hidden');
        document.getElementById('galleryLightbox').classList.add('flex');
    }

    function closeLightbox() {
        document.getElementById('galleryLightbox').classList.add('hidden');
        document.getElementById('galleryLightbox').classList.remove('flex');
    }

    function shiftLightbox(dir) {
        lightboxIndex = (lightboxIndex + dir + galleryImages.length) % galleryImages.length;
        showLightboxAt(lightboxIndex);
    }

    function showLightboxAt(index) {
        const item = galleryImages[index];
        document.getElementById('lightboxImg').src = item.url;
        document.getElementById('lightboxImg').alt = item.caption;
        document.getElementById('lightboxCaption').textContent = item.caption;
        document.getElementById('lightboxPrev').style.display = galleryImages.length > 1 ? 'block' : 'none';
        document.getElementById('lightboxNext').style.display = galleryImages.length > 1 ? 'block' : 'none';
    }

    document.addEventListener('keydown', e => {
        const lb = document.getElementById('galleryLightbox');
        if (lb.classList.contains('hidden')) return;
        if (e.key === 'Escape') closeLightbox();
        if (e.key === 'ArrowLeft') shiftLightbox(-1);
        if (e.key === 'ArrowRight') shiftLightbox(1);
    });
</script>
}
