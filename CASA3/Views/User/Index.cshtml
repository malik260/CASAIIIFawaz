@using static Util
@model IEnumerable<Core.ViewModels.AppUserVM>
@{
    Layout = Constants.CMS_Layout;
    var pageType = "User Management";
    ViewData["Page-title"] = pageType;
    ViewData["Title"] = pageType;
    var user = Util.GetCurrentUser();
    var canCreate = ViewData["CanCreate"] as bool? ?? false;
    var canEdit = ViewData["CanEdit"] as bool? ?? false;
    var canDelete = ViewData["CanDelete"] as bool? ?? false;
    var canToggleStatus = ViewData["CanToggleStatus"] as bool? ?? false;
}

<style>
    body {
        counter-reset: Serial;
    }

    tr td:first-child:before {
        counter-increment: Serial;
        content: counter(Serial);
    }

    .status-badge {
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 11px;
    }

    .role-badge {
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 11px;
    }
</style>

<!-- Page Header -->
<div class="page-header">
    <div class="row">
        <div class="col">
            <h3 class="page-title">User Management</h3>
        </div>
        @if (canCreate)
        {
            <div class="col-auto float-right ml-auto">
                <a class="btn add-btn" href="#" data-toggle="modal" data-target="#usr_addModal">
                    <i class="fa fa-plus"></i> Add User
                </a>
            </div>
        }
    </div>
</div>
<!-- /Page Header -->

<div class="row">
    <div class="col-md-12">
        @if (Model != null && Model.Count() > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover custom-table datatable mb-0">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Date Registered</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td><strong>@item.FullName</strong></td>
                                <td>
                                    <a href="mailto:@item.Email">@item.Email</a>
                                </td>
                                <td>
                                    @if (item.UserRole.Equals("SuperAdmin", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge badge-danger role-badge">SuperAdmin</span>
                                    }
                                    else if (item.UserRole.Equals("Admin", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge badge-warning role-badge">Admin</span>
                                    }
                                    else if (item.UserRole.Equals("Staff", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge badge-info role-badge">Staff</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary role-badge">@item.UserRole</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsDeactivated)
                                    {
                                        <span class="badge badge-danger status-badge">Deactivated</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success status-badge">Active</span>
                                    }
                                </td>
                                <td>@item.DateRegistered.ToString("MMM dd, yyyy")</td>
                                <td class="text-center">
                                    @if (canEdit || canDelete || canToggleStatus)
                                    {
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                <i class="material-icons">more_vert</i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                @if (canToggleStatus)
                                                {
                                                    <a class="dropdown-item" onclick="ToggleUserStatus('@item.Id')">
                                                        <i class="fa fa-@(item.IsDeactivated ? "check" : "ban") m-r-5"></i>@(item.IsDeactivated ? "Activate" : "Deactivate")
                                                    </a>
                                                }
                                                @if (canEdit)
                                                {
                                                    <a class="dropdown-item" onclick="GetUserDetailForEdit('@item.Id')">
                                                        <i class="fa fa-edit m-r-5 text-success"></i>Edit
                                                    </a>
                                                }
                                                @if (canDelete)
                                                {
                                                    <a class="dropdown-item" onclick="getDataForDelete('@item.Id')">
                                                        <i class="fa fa-trash-o m-r-5 text-danger"></i>Delete
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="row p-5 m-5">
                <div class="col-md-12 text-center p-5 m-5">
                    <h2>No Record Found</h2>
                </div>
            </div>
        }
    </div>
</div>

@if (canCreate)
{
<!-- Add Modal -->
<div class="modal custom-modal fade" id="usr_addModal" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
            <div class="modal-body">
                <h5 class="modal-title text-center mb-3">Add User</h5>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name <span class="text-danger">*</span></label>
                            <input type="text" id="usr_firstname" class="form-control" placeholder="Enter First Name">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Last Name <span class="text-danger">*</span></label>
                            <input type="text" id="usr_lastname" class="form-control" placeholder="Enter Last Name">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Email <span class="text-danger">*</span></label>
                            <input type="email" id="usr_email" class="form-control" placeholder="Enter Email Address">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Password <span class="text-danger">*</span></label>
                            <input type="password" id="usr_password" class="form-control" placeholder="Enter Password">
                            <small class="text-muted">Minimum 3 characters</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Role <span class="text-danger">*</span></label>
                            <select id="usr_role" class="form-control">
                                @if (user.UserRole == Constants.SuperAdminRole)
                                {
                                    <option value="">Select Role</option>
                                    <option value="Admin">Admin</option>
                                }
                                <option value="Staff">Staff</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="m-t-20 text-center">
                    <button class="btn newBtn submit-btn" id="usr_add_user_btn" onclick="CreateUser()">Add User</button>
                </div>
            </div>
        </div>
    </div>
</div>
}

@if (canEdit)
{
<!-- Edit Modal -->
<div class="modal custom-modal fade" id="usr_editModal" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close"></i></button>
            <div class="modal-body">
                <h5 class="modal-title text-center mb-3">Update User</h5>
                <div class="row">
                    <input type="text" id="usr_edit_Id" hidden>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name <span class="text-danger">*</span></label>
                            <input type="text" id="usr_firstname_edit" class="form-control" placeholder="Enter First Name">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Last Name <span class="text-danger">*</span></label>
                            <input type="text" id="usr_lastname_edit" class="form-control" placeholder="Enter Last Name">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Email <span class="text-danger">*</span></label>
                            <input type="email" id="usr_email_edit" class="form-control" placeholder="Enter Email Address">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>New Password <small class="text-muted">(Leave empty to keep current)</small></label>
                            <input type="password" id="usr_newpassword_edit" class="form-control" placeholder="Enter New Password">
                            <small class="text-muted">Minimum 3 characters</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Role <span class="text-danger">*</span></label>
                            <select id="usr_role_edit" class="form-control">
                                @if (user.UserRole == Constants.SuperAdminRole)
                                {
                                    <option value="">Select Role</option>
                                    <option value="Admin">Admin</option>
                                }
                                <option value="Staff">Staff</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="m-t-20 text-center">
                    <button class="btn newBtn submit-btn" id="usr_edit_user_btn" onclick="UpdateUser()">Update Record</button>
                </div>
            </div>
        </div>
    </div>
</div>
}

@if (canDelete)
{
<!-- Delete Modal -->
<div class="modal custom-modal fade" id="usr_deleteModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-header">
                    <input id="usr_delete_Id" hidden />
                    <h3>Delete User</h3>
                    <p>Are you sure you want to delete this user? This action cannot be undone.</p>
                </div>
                <div class="modal-btn delete-action">
                    <div class="row">
                        <div class="col-6">
                            <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-secondary cancel-btn">Cancel</a>
                        </div>
                        <div class="col-6">
                            <a onclick="DeleteUser()" id="usr_del_user_btn" class="btn btn-primary continue-btn">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    <script src="~/js/user.js"></script>
}

